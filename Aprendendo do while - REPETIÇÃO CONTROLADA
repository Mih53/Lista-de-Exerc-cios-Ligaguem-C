// flag determina quando o la√ßo while deve ser encerrado

#include <stdio.h>

int main(void) {

  int contador = 0;
  float valor, media, total = 0;
  
  printf("Digite um valor (-1 para encerrar): \n");
  scanf("%f", &valor);

  while (valor != -1)// enquanto o valor for difernete de menos um, o loop vai contiuar
    {
      total = total + valor;
      contador++;
     printf("Digite um valor (-1 para encerrar): \n");
  scanf("%f", &valor);
    }
  media = total / contador;

  printf("O valor e: %.2f\n", media);
  
  return 0;
}
